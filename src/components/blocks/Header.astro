---
import directus from "../../../lib/directus"
import { readSingleton } from "@directus/sdk"
const global = await directus.request(readSingleton("global", { fields: ["logo"] }))
const { branded, title, link } = Astro.props
---

<div class="text-center mb-10">
    { branded ? (
        <div class="flex mx-auto justify-center flex-row align-middle md:-ml-8 -ml-4 text-urika-gray-400 dark:text-urika-gray-300">
            <img src={`https://admin.urikabioworks.com/assets/${global.logo}`} alt="URIKA Logo" class="w-12 h-20 lg:w-24 lg:h-40 mr-2" />
            <h1 class="md:text-center self-center">
                <p>
                    <span class="font-urika text-5xl md:text-6xl">URIKA </span>
                    <span class="desktop-only font-touche text-5xl tracking-widest">[bioworks]</span>
                </p>
            </h1>
        </div>
        <div>
            { link ? (
                <div class={`flex flex-row justify-center items-center ${branded ? '-mt-1 lg:-mt-10' : ''}`}>
                    <a href={ link } data-astro-prefetch class={`ml-9 block font-touche text-urika-blue-800 dark:text-urika-blue-600 font-extrabold text-3xl md:text-5xl ${link ? 'hover:underline underline-offset-8 decoration-urika-orange-500' : ''}`}>{ title }</a>
                    <svg class="fade-in ml-3 h-5 w-5 md:h-6 md:w-6 fill-urika-orange-500 self-center" viewBox="0 0 16 16" xmlns="http://www.w3.org/2000/svg"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <path d="M7.05025 1.53553C8.03344 0.552348 9.36692 0 10.7574 0C13.6528 0 16 2.34721 16 5.24264C16 6.63308 15.4477 7.96656 14.4645 8.94975L12.4142 11L11 9.58579L13.0503 7.53553C13.6584 6.92742 14 6.10264 14 5.24264C14 3.45178 12.5482 2 10.7574 2C9.89736 2 9.07258 2.34163 8.46447 2.94975L6.41421 5L5 3.58579L7.05025 1.53553Z"></path> <path d="M7.53553 13.0503L9.58579 11L11 12.4142L8.94975 14.4645C7.96656 15.4477 6.63308 16 5.24264 16C2.34721 16 0 13.6528 0 10.7574C0 9.36693 0.552347 8.03344 1.53553 7.05025L3.58579 5L5 6.41421L2.94975 8.46447C2.34163 9.07258 2 9.89736 2 10.7574C2 12.5482 3.45178 14 5.24264 14C6.10264 14 6.92742 13.6584 7.53553 13.0503Z"></path> <path d="M5.70711 11.7071L11.7071 5.70711L10.2929 4.29289L4.29289 10.2929L5.70711 11.7071Z"></path> </g></svg>
                </div>
            ) : (
                <h2 class="font-touche text-urika-blue-800 dark:text-urika-blue-600 font-extrabold text-3xl md:text-5xl -mt-1 lg:-mt-10">{ title }</h2>
            )}
        </div>
        ) : (
            <div>
                { link ? (
                    <div class={`flex flex-row justify-center items-center ${branded ? '-mt-1 lg:-mt-10' : ''}`}>
                        <a href={ link } data-astro-prefetch class={`ml-9 block font-touche text-urika-blue-800 dark:text-urika-blue-600 font-extrabold text-4xl md:text-5xl ${link ? 'hover:underline underline-offset-8 decoration-urika-orange-500' : ''}`}>{ title }</a>
                        <svg class="fade-in ml-3 h-6 w-6 fill-urika-orange-500 self-center" viewBox="0 0 16 16" xmlns="http://www.w3.org/2000/svg"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <path d="M7.05025 1.53553C8.03344 0.552348 9.36692 0 10.7574 0C13.6528 0 16 2.34721 16 5.24264C16 6.63308 15.4477 7.96656 14.4645 8.94975L12.4142 11L11 9.58579L13.0503 7.53553C13.6584 6.92742 14 6.10264 14 5.24264C14 3.45178 12.5482 2 10.7574 2C9.89736 2 9.07258 2.34163 8.46447 2.94975L6.41421 5L5 3.58579L7.05025 1.53553Z"></path> <path d="M7.53553 13.0503L9.58579 11L11 12.4142L8.94975 14.4645C7.96656 15.4477 6.63308 16 5.24264 16C2.34721 16 0 13.6528 0 10.7574C0 9.36693 0.552347 8.03344 1.53553 7.05025L3.58579 5L5 6.41421L2.94975 8.46447C2.34163 9.07258 2 9.89736 2 10.7574C2 12.5482 3.45178 14 5.24264 14C6.10264 14 6.92742 13.6584 7.53553 13.0503Z"></path> <path d="M5.70711 11.7071L11.7071 5.70711L10.2929 4.29289L4.29289 10.2929L5.70711 11.7071Z"></path> </g></svg>
                    </div>
                ) : (
                    <h1 class="font-touche text-urika-blue-800 dark:text-urika-blue-600 font-extrabold text-4xl md:text-5xl">{ title }</h1>
                )}
        </div>
    )}
</div>
