---
const { title, offerings } = Astro.props;
---

<div class="flex flex-col gap-12 items-center justify-center my-24">
    <h2 class="fade-in font-touche-medium text-urika-orange-400 text-center md:text-5xl text-4xl">{title}</h2>
    <div class="flex flex-col gap-6">
        {offerings.map((item, index) => (
            <div class="flex flex-col items-center md:items-center justify-center gap-4 mb-8">
                <div class="flex flex-col md:flex-row text-pretty gap-8">
                    <h3 class="fade-left md:min-w-96 text-urika-blue-800 text-4xl md:text-5xl uppercase font-extrabold md:text-right self-center">{item.title}</h3>
                    <div class="fade-in text-urika-gray-500 text-xl text-pretty">
                        <Fragment set:html={item.paragraph_1} />
                    </div>
                </div>
                <div class="fade-in text-urika-gray-500 text-xl flex flex-col gap-4 text-pretty">
                    <Fragment set:html={item.paragraph_2} />
                </div>
            </div>
            <hr class="w-1/2 border-urika-orange-400 mx-auto mb-12" />
        ))}
    </div>
</div>
