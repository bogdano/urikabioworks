---
const { name, title, headshot, bio } = Astro.props
---

<div class="stagger-in flex flex-col gap-8 mb-8 items-center">
    <div class="flex flex-col items-center md:flex-row lg:self-end md:mr-4">
        <div class="flex flex-col md:self-end text-center md:text-right pr-4 pb-4">
            <h2 class="text-3xl font-bold leading-8 mb-1">{name}</h2>
            <h3 class="text-2xl text-urika-orange-600 dark:text-urika-orange-500 leading-6 font-extrabold">{title}</h3>
        </div>
        <div class="w-72 h-72 rounded-2xl md:self-start bg-zinc-100 dark:bg-zinc-800">
            { headshot && (
                <img src={`https://admin.urikabioworks.com/assets/${headshot}?width=500&format=webp`} alt={name} loading="lazy" class="fade-in w-72 h-72 rounded-2xl object-cover" />
            )}
        </div>
    </div>
    <div class="rounded-2xl md:p-4 md:px-6 md:border border-zinc-100 dark:border-zinc-800 h-full md:shadow">
        <p class="text-lg md:indent-12">{bio}</p>
    </div>
</div>
